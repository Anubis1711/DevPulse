<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Side-by-Side Comparison</title>
    <link rel="stylesheet" href="/shared.css">
    <link rel="stylesheet" href="/comparison.css">
</head>
<body>
    <div class="comparison-container">
    <!-- Gebruiker 1 -->
    <div class="user-card">
        <img src="/icons/user1-avatar.png" alt="User 1 Avatar" class="avatar">
        <h3>User 1</h3>
        <p>@user1</p>
        <table>
            <thead>
                <tr><th colspan="2">Statistieken</th></tr>
            </thead>
            <tbody>
                <tr><td>Commits deze week</td><td>35</td></tr>
                <tr><td>Repositories</td><td>12</td></tr>
                <tr><td>Volgers</td><td>150</td></tr>
                <tr><td>Volgt</td><td>90</td></tr>
                <tr><td>Hoogste streak</td><td>15 dagen</td></tr>
                <tr><td>Meest gebruikte taal</td><td>JavaScript</td></tr>
            </tbody>
            <thead>
                <tr><th colspan="2">Activiteit</th></tr>
            </thead>
            <tbody>
                <tr><td>Aantal posts</td><td>20</td></tr>
                <tr><td>Meeste commits (1 dag)</td><td>12</td></tr>
                <tr><td>Achievements</td><td>8</td></tr>
            </tbody>
        </table>
    </div>

    <div class="vs">VS</div>

    <!-- Gebruiker 2 -->
    <div class="user-card">
        <img src="/icons/user2-avatar.png" alt="User 2 Avatar" class="avatar">
        <h3>User 2</h3>
        <p>@user2</p>
        <table>
            <thead>
                <tr><th colspan="2">Statistieken</th></tr>
            </thead>
            <tbody>
                <tr><td>Commits deze week</td><td>20</td></tr>
                <tr><td>Repositories</td><td>8</td></tr>
                <tr><td>Volgers</td><td>200</td></tr>
                <tr><td>Volgt</td><td>120</td></tr>
                <tr><td>Hoogste streak</td><td>10 dagen</td></tr>
                <tr><td>Meest gebruikte taal</td><td>Python</td></tr>
            </tbody>
            <thead>
                <tr><th colspan="2">Activiteit</th></tr>
            </thead>
            <tbody>
                <tr><td>Aantal posts</td><td>15</td></tr>
                <tr><td>Meeste commits (1 dag)</td><td>9</td></tr>
                <tr><td>Achievements</td><td>5</td></tr>
            </tbody>
        </table>
    </div>
</div>
</body>
</html>
