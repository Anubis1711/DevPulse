<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Side-by-Side Comparison</title>
    <link rel="stylesheet" href="/shared.css">
    <link rel="stylesheet" href="/comparison.css">
</head>
<body>
    <div class="comparison-container">
        <!-- Gebruiker 1 -->
        <div class="user-column">
            <div class="user-card">
                <img src="<%= currentUser.avatarUrl %>" class="avatar">
                <h3><%= currentUser.name || 'Geen naam' %></h3>
                <p class="username">@<%= currentUser.login || '-' %></p>
            </div>
            <div class="stats">
                <div class="stat-item">
                    <span>Repositories</span>
                    <strong><%= currentUser.repoCount || '-' %></strong>
                </div>
                <div class="stat-item">
                    <span>Volgers</span>
                    <strong><%= currentUser.followers || '-' %></strong>
                </div>
                <div class="stat-item">
                    <span>Meest gebruikte taal</span>
                    <strong><%= currentUser.mostUsedLanguage || 'Onbekend' %></strong>
                </div>
                <div class="stat-item">
                    <span>Commits dit jaar</span>
                    <strong><%= currentUser.commitsThisYear || '0' %></strong>
                </div>
                <div class="stat-item">
                    <span>Lid sinds</span>
                    <strong><%= currentUser.createdAt || '-' %></strong>
                </div>
            </div>
        </div>

        <div class="vs">VS</div>

        <!-- Gebruiker 2 -->
        <div class="user-column">
            <div class="user-card">
                <img src="<%= selectedUser.avatarUrl %>" class="avatar">
                <h3><%= selectedUser.name || 'Geen naam' %></h3>
                <p class="username">@<%= selectedUser.login || '-' %></p>
            </div>
            <div class="stats">
                <div class="stat-item">
                    <span>Repositories</span>
                    <strong><%= selectedUser.repoCount || '-' %></strong>
                </div>
                <div class="stat-item">
                    <span>Volgers</span>
                    <strong><%= selectedUser.followers || '-' %></strong>
                </div>
                <div class="stat-item">
                    <span>Meest gebruikte taal</span>
                    <strong><%= selectedUser.mostUsedLanguage || 'Onbekend' %></strong>
                </div>
                <div class="stat-item">
                    <span>Commits dit jaar</span>
                    <strong><%= selectedUser.commitsThisYear || '0' %></strong>
                </div>
                <div class="stat-item">
                    <span>Lid sinds</span>
                    <strong><%= selectedUser.createdAt || '-' %></strong>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
